<Window x:Class="Orangify.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Orangify" xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.FontWeight="Medium"
        TextElement.FontSize="14"
        FontFamily="pack://application:,,,/MaterialDesignThemes.Wpf;component/Resources/Roboto/#Roboto"
        Title="MainWindow" Height="450" Width="698.347">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="45*" />
            <RowDefinition Height="284*" />
            <RowDefinition Height="90*" />
        </Grid.RowDefinitions>
        <Label Content="Orangify" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="0.021,0.156" Grid.ColumnSpan="3" Height="25" Width="217" Margin="10,10,0,0"/>
        <Label Content="Song Title" Grid.Column="4" HorizontalAlignment="Left" Margin="10,10,0,0" Grid.Row="1" VerticalAlignment="Top" Grid.ColumnSpan="3" Height="68" Width="287" FontSize="48"/>
        <Label Content="Artist - Album" Grid.Column="4" HorizontalAlignment="Left" Margin="10,83,-6,0" Grid.Row="1" VerticalAlignment="Top" Grid.ColumnSpan="4" Width="297" Height="67" FontSize="24"/>
        <Slider
  TickFrequency="5"
  Orientation="Horizontal"
  Minimum="1"
  Maximum="50"
  Value="25" Grid.ColumnSpan="6" Margin="42,232,24.667,10" Grid.Row="1" />
        <Button
          Style="{StaticResource MaterialDesignIconButton}"
          ToolTip="MaterialDesignIconButton"
          Background="{DynamicResource MaterialDesignTextFieldBoxBackground}" Margin="27,21,25,21" Grid.Row="2">
            <materialDesign:PackIcon
            Kind="SkipPrevious" Height="38" Width="22" />
        </Button>
        <Button
          Style="{StaticResource MaterialDesignIconButton}"
          ToolTip="MaterialDesignIconButton"
          Background="{DynamicResource MaterialDesignTextFieldBoxBackground}" Grid.Column="1" Margin="26,21" Grid.Row="2">
            <materialDesign:PackIcon
            Kind="Play" />
        </Button>
        <Button
          Style="{StaticResource MaterialDesignIconButton}"
          ToolTip="MaterialDesignIconButton"
          Background="{DynamicResource MaterialDesignTextFieldBoxBackground}" Grid.Column="2" Margin="27,21,25,21" Grid.Row="2">
            <materialDesign:PackIcon
            Kind="Pause" />
        </Button>
        <Button
          Style="{StaticResource MaterialDesignIconButton}"
          ToolTip="MaterialDesignIconButton"
          Background="{DynamicResource MaterialDesignTextFieldBoxBackground}" Margin="25,21,27,21" Grid.Row="2" Grid.Column="3">
            <materialDesign:PackIcon
            Kind="SkipNext" Height="38" Width="22" />
        </Button>
        <Button
          Style="{StaticResource MaterialDesignIconButton}"
          ToolTip="MaterialDesignIconButton"
          Background="{DynamicResource MaterialDesignTextFieldBoxBackground}" Margin="42,21,67,21" Grid.Row="2" Grid.Column="5">
            <materialDesign:PackIcon
            Kind="Star" Height="38" Width="22" />
        </Button>
        <Button
          Style="{StaticResource MaterialDesignIconButton}"
          ToolTip="MaterialDesignIconButton"
          Background="{DynamicResource MaterialDesignTextFieldBoxBackground}" Margin="147,21,10,21" Grid.Row="2" Grid.Column="5" RenderTransformOrigin="-1.097,0.565">
            <materialDesign:PackIcon
            Kind="PlaylistAdd" Height="38" Width="22" />
        </Button>
        <Image Grid.ColumnSpan="3" HorizontalAlignment="Left" Height="200" Margin="10,10,0,0" Grid.Row="1" VerticalAlignment="Top" Width="200" Grid.Column="1"/>
    </Grid>
</Window>
